    <div class="single-product-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="single-sidebar">
                        <h2 class="sidebar-title">Search Products</h2>
                        <form action="">
                            <input type="text" placeholder="Search products...">
                            <input type="submit" value="Search">
                        </form>
                    </div>
                    <div class="single-sidebar">
                        <h2 class="sidebar-title">Recent Posts</h2>
                        <ul>
                            <li><a href="single-product.html">Sony Smart TV - 2015</a></li>
                            <li><a href="single-product.html">Sony Smart TV - 2015</a></li>
                            <li><a href="single-product.html">Sony Smart TV - 2015</a></li>
                            <li><a href="single-product.html">Sony Smart TV - 2015</a></li>
                            <li><a href="single-product.html">Sony Smart TV - 2015</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-8">
                    <div class="product-content-right">
                        <div class="woocommerce">
                            <div class="woocommerce-info">
                                Returning customer? <a class="showlogin" data-toggle="collapse" href="#login-form-wrap" aria-expanded="false" aria-controls="login-form-wrap">Click here to login</a>
                            </div>


                            @{ var a = HttpContext.Current.Session["gmail"];

                            }
                            @if (a != null)
                            {
                                <div class="col-2">
                                    <div class="woocommerce-shipping-fields">

                                        <div class="shipping_address" style="display: block;">
                                            <p id="shipping_last_name_field" class="form-row form-row-last validate-required">
                                                <label class="form-group">
                                                    Gmail <abbr title="required" class="required">*</abbr>
                                                </label>
                                                <input type="text" value="@HttpContext.Current.Session["gmail"]" placeholder="" name="gmail" class="input-text ">
                                            </p>
                                        </div>
                                    </div>

                                </div>
                                <a href="@Url.Action("Index", "DonHang", new { id = Model.maSP })" class="form-group" style="height:60px;right:120px;background-color:deepskyblue">Mua</a>

                            }
                            else
                            {
                                <form action="/DonHang/Index/@Model.maSP" method="post">
                                    <div class="shipping_address" style="display: block;">

                                        <p id="shipping_last_name_field" class="form-row form-row-last validate-required">
                                            <label class="form-group">
                                                Họ và Tên <abbr title="required" class="required">*</abbr>
                                            </label>
                                            <input type="text" value="" placeholder="" name="tenkh" class="input-text ">
                                        </p>
                                        <p id="shipping_last_name_field" class="form-row form-row-last validate-required">
                                            <label class="form-group">
                                                Địa Chỉ <abbr title="required" class="required">*</abbr>
                                            </label>
                                            <input type="text" value="" placeholder="" name="diachi" class="input-text ">
                                        </p>
                                        <p id="shipping_last_name_field" class="form-row form-row-last validate-required">
                                            <label class="form-group">
                                                SDT <abbr title="required" class="required">*</abbr>
                                            </label>
                                            <input type="text" value="" placeholder="" name="sdt" class="input-text ">
                                        </p>

                                    </div>
                                    <button type="submit" class="form-group">Mua</button>
                                </form>
                            }
                            <h3 id="order_review_heading">Your order</h3>

                            <div id="order_review" style="position: relative;">
                                <table class="shop_table">
                                    <thead>
                                        <tr>
                                            <th class="product-name">Product</th>
                                            <th class="product-total">Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr class="cart_item">
                                            <td class="product-name">
                                                @Model.tenSP
                                            </td>
                                            <td class="product-total">
                                                <span class="amount">@ViewBag.thanhtien</span>
                                            </td>
                                        </tr>
                                    </tbody>
                                    <tfoot>

                                        <tr class="cart-subtotal">
                                            <th>Cart Subtotal</th>
                                            <td>
                                                <span class="amount">@ViewBag.thanhtien</span>
                                            </td>
                                        </tr>

                                        <tr class="shipping">
                                            <th>Shipping and Handling</th>
                                            <td>

                                                Free Shipping
                                                <input type="hidden" class="shipping_method" value="free_shipping" id="shipping_method_0" data-index="0" name="shipping_method[0]">
                                            </td>
                                        </tr>


                                        <tr class="order-total">
                                            <th>Order Total</th>
                                            <td><strong><span class="amount">@ViewBag.thanhtien</span></strong> </td>
                                        </tr>

                                    </tfoot>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
