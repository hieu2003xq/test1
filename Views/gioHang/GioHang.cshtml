</head>
<body>

    <div class="header-area">
        <div class="container">
            <div class="row">
                @{ var user = HttpContext.Current.Session["user"];
                    if (user != null)
                    {
                        <div class="col-md-8">
                            <div class="user-menu">
                                                <ul>
                                                    <li class="dropdown">
                                                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                                            <i class="fa fa-user fa-fw"></i>
                                                            @{
                                                                <span>@user</span>

                                                            }
                                                            <b class="caret"></b>
                                                        </a>
                                                        <ul class="dropdown-menu dropdown-user">
                                                            <li>
                                                                <a href="#"><i class="fa fa-user fa-fw"></i> User Profile</a>
                                                            </li>
                                                            <li>
                                                                <a href="#"><i class="fa fa-gear fa-fw"></i> Settings</a>
                                                            </li>
                                                            <li class="divider"></li>
                                                            <li>
                                                                <a href="~/tkUsers/DangXuat"><i class="fa fa-sign-out fa-fw"></i> Logout</a>
                                                            </li>
                                                        </ul>
                                                    </li>
                                                    <li><a href="@Url.Action("dangXuat","tkNguoiDung")"><i class="fa fa-sign-out fa-fw"></i> Đăng Xuất</a></li>
                                                    <li><a href="@Url.Action("gioHang", "gioHang")"><i class="fa fa-user"></i> My Cart</a></li>
                                                    <li><a href="checkout.html"><i class="fa fa-user"></i> Checkout</a></li>

                                                </ul>
                            </div>
                        </div>


                    }
                    else
                    {
                        <div class="col-md-8">
                            <div class="user-menu">
                                <ul>

                                    <li><a href="@Url.Action("DangKy", "tkUsers")"><i class="fa fa-heart"></i> Đăng Ký</a></li>
                                    <li><a href="cart.html"><i class="fa fa-user"></i> My Cart</a></li>
                                    <li><a href="checkout.html"><i class="fa fa-user"></i> Checkout</a></li>
                                    <li><a href="~/tkNguoiDung/DangNhap"><i class="fa fa-user"></i> Login</a></li>
                                </ul>
                            </div>
                        </div>
                    }
                }

                <div class="col-md-4">
                    <div class="header-right">
                        <ul class="list-unstyled list-inline">
                            <li class="dropdown dropdown-small">
                                <a data-toggle="dropdown" data-hover="dropdown" class="dropdown-toggle" href="#"><span class="key">currency :</span><span class="value">USD </span><b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a href="#">USD</a></li>
                                    <li><a href="#">INR</a></li>
                                    <li><a href="#">GBP</a></li>
                                </ul>
                            </li>

                            <li class="dropdown dropdown-small">
                                <a data-toggle="dropdown" data-hover="dropdown" class="dropdown-toggle" href="#"><span class="key">language :</span><span class="value">English </span><b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a href="#">English</a></li>
                                    <li><a href="#">French</a></li>
                                    <li><a href="#">German</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End header area -->

    <div class="site-branding-area">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <div class="logo">
                        <h1><a href="./"><img src="~/img/logo.png"></a></h1>
                    </div>
                </div>
                @{
                    if (user != null)
                    {
                        <div class="col-sm-6">
                            <div class="shopping-item">
                                <a href="@Url.Action("GioHang", "gioHang")">Cart - <span class="cart-amunt">@ViewBag.tongtien</span> <i class="fa fa-shopping-cart"></i> <span class="product-count">@ViewBag.tongSL</span></a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="col-sm-6">
                            <div class="shopping-item">
                                <a href="@Url.Action("gioHang", "gioHang")">Cart - <span class="cart-amunt"></span> <i class="fa fa-shopping-cart"></i> <span class="product-count">@ViewBag.tongSL</span></a>
                            </div>
                        </div>
                    }

                }

            </div>
        </div>
    </div> <!-- End site branding area -->

    <div class="mainmenu-area">
        <div class="container">
            <div class="row">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                        <li><a href="@Url.Action("Index", "Shop")">Shop page</a></li>
                        <li><a href="@Url.Action("Index", "newProduct")">New Prodcut</a></li>
                        <li class="active"><a href="@Url.Action("gioHang", "gioHang")">Cart</a></li>
                        <li><a href="@Url.Action("DanhSachDon", "DonHang")">Đơn Hàng Của Bạn</a></li>
                        <li><a href="#">Category</a></li>
                        <li><a href="#">Others</a></li>
                        <li><a href="#">Contact</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div> <!-- End mainmenu area -->

    <div class="product-big-title-area">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="product-bit-title text-center">
                        <h2>Shopping Cart</h2>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End Page title area -->


    <div class="single-product-area">
        <div class="zigzag-bottom">
            @{
                var tenSP = HttpContext.Current.Session["ten"];
            }
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="single-sidebar">
                        <h2 class="sidebar-title">Search Products</h2>
                        <form action="/gioHang/TimKiem" method="post">
                            @Html.AntiForgeryToken()
                            <input type="text" placeholder="Search products..." value="@tenSP" name="ten">
                            <input type="submit" value="Search">
                            <div style="color:red">@TempData["kTimThay"]</div>
                        </form>
                    </div>

                    <div class="single-sidebar">
                        <h2 class="sidebar-title">Recent Posts</h2>
                        <ul>
                            <li><a href="#">Sony Smart TV - 2015</a></li>
                            <li><a href="#">Sony Smart TV - 2015</a></li>
                            <li><a href="#">Sony Smart TV - 2015</a></li>
                            <li><a href="#">Sony Smart TV - 2015</a></li>
                            <li><a href="#">Sony Smart TV - 2015</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-8">
                    <div class="product-content-right">
                        <div class="woocommerce">
                            <form method="post" action="~/checkOut/Index">
                                <table cellspacing="0" class="shop_table cart">
                                    <thead>
                                        <tr>
                                            <th class="product-remove">&nbsp;</th>
                                            <th class="product-thumbnail">&nbsp;</th>
                                            <th class="product-name">Product</th>
                                            <th class="product-price">Price</th>
                                            <th class="product-quantity">Quantity</th>
                                            <th class="product-subtotal">Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>


                                        @{

                                            if (Model != null)
                                            {
                                                foreach (var item in Model)
                                                {

                                                <tr class="cart_item">

                                                    <td class="product-remove">
                                                        <label for="maSP"></label>
                                                        <a title="Remove this item" class="remove" href="@Url.Action("xoaGioHang", "gioHang", new { id = item.maSP })" name="id" id="id">×</a>
                                                    </td>

                                                    <td class="product-thumbnail">
                                                        <a href="@Url.Action("shopSP", "chiTietSP", new { id = item.maSP })"><img width="145" height="145" alt="poster_1_up" class="shop_thumbnail" src="~/img/@item.hinhAnh"></a>
                                                    </td>

                                                    <td class="product-name">
                                                        <a href="@Url.Action("shopSP", "chiTietSP", new { id = item.maSP })">@item.tenSP</a>
                                                    </td>

                                                    <td class="product-price">
                                                        <span class="amount">@item.giaBan</span>
                                                    </td>

                                                    <td class="product-quantity">
                                                        @item.soLuong
                                                    </td>
                                                    <td class="product-quantity">
                                                        @item.thanhTien
                                                    </td>

                                                    <td class="product-subtotal">
                                                        <span class="amount"><a href="@Url.Action("thongtinDon", "DonHang", new { id = item.maSP })">Mua</a></span>
                                                    </td>
                                                </tr>

                                                    }
                                                }
                                                else {
                                                <h3>Giỏ Hàng trống</h3>
                                            }
                                            }




                                    </tbody>
                                </table>
                            </form>

                            <div class="cart-collaterals">



                                <div class="cart_totals ">
                                    <h2>Cart Totals</h2>

                                    <table cellspacing="0">
                                        <tbody>
                                            <tr class="cart-subtotal">
                                                <th>Tổng Số Lượng</th>
                                                <td><span class="amount"> @ViewBag.tongSL</span></td>
                                            </tr>

                                            <tr class="shipping">
                                                <th>Shipping and Handling</th>
                                                <td>Free Shipping</td>
                                            </tr>

                                            <tr class="order-total">
                                                <th>Tổng Tiền</th>
                                                <td><strong><span class="amount">@ViewBag.tongtien VNĐ</span></strong> </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


